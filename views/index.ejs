<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>SecureShop</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
    <nav class="bg-blue-600 text-white p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-xl font-bold">SecureShop</h1>
            <div>
                <% if (user) { %>
                    <span class="mr-4">Hello, <%= user.username %></span>
                    <a href="/profile" class="hover:underline mr-4">Profile</a>
                    <a href="/logout" class="bg-red-500 px-3 py-1 rounded hover:bg-red-600">Logout</a>
                <% } else { %>
                    <a href="/login" class="bg-green-500 px-3 py-1 rounded hover:bg-green-600">Login</a>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container mx-auto p-6">
        <h2 class="text-2xl font-bold mb-6 text-gray-800">Latest Products</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% products.forEach(product => { %>
                <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition">
                    <div class="text-xs font-bold text-blue-500 mb-2 uppercase"><%= product.category %></div>
                    <h3 class="text-xl font-semibold mb-2"><%= product.name %></h3>
                    <p class="text-gray-600 mb-4"><%= product.description %></p>
                    <div class="flex justify-between items-center">
                        <span class="text-lg font-bold text-green-600">$<%= product.price %></span>
                        <a href="/product/<%= product.id %>" class="text-blue-600 hover:text-blue-800">View Details &rarr;</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>